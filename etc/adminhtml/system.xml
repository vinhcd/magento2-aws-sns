<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="vinhcd_aws">
            <group id="sns" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>SNS</label>
                <field id="type" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Type</label>
                    <source_model>Vinhcd\AwsSns\Model\Config\Source\NotificationType</source_model>
                </field>
                <field id="order_success_arn" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Topic ARN</label>
                    <depends>
                        <field id="type">order_success</field>
                    </depends>
                </field>
                <field id="order_failure_arn" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Topic ARN</label>
                    <depends>
                        <field id="type">order_failure</field>
                    </depends>
                </field>
                <field id="order_cancel_arn" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Topic ARN</label>
                    <depends>
                        <field id="type">order_cancel</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
